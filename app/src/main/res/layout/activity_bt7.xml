<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Thông tin cá nhân -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin cá nhân"
        android:textStyle="bold"
        android:textSize="18sp"
        android:gravity="center"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <!-- Họ tên -->
    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ tên"
        android:layout_marginTop="16dp"
        android:padding="8dp"/>

    <!-- CMND -->
    <EditText
        android:id="@+id/edtCMND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CMND"
        android:layout_marginTop="8dp"
        android:padding="8dp"/>

    <!-- Bằng cấp -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cấp"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- Chọn bằng cấp -->
    <RadioGroup
        android:id="@+id/radioGroupDegree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/radioTrungCap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trung cấp"/>

        <RadioButton
            android:id="@+id/radioCaoDang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cao đẳng"/>

        <RadioButton
            android:id="@+id/radioDaiHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đại học"/>
    </RadioGroup>

    <!-- Sở thích -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- Chọn sở thích -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <CheckBox
            android:id="@+id/chkDocBao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc báo"/>

        <CheckBox
            android:id="@+id/chkDocSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc sách"/>

        <CheckBox
            android:id="@+id/chkDocCoding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đọc coding"/>
    </LinearLayout>

    <!-- Thông tin bổ sung -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:layout_marginTop="16dp"/>

    <!-- Nhập thông tin bổ sung -->
    <EditText
        android:id="@+id/edtAdditionalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senior Programmer"
        android:text="Senior Programmer\nSenior saler"
        android:padding="8dp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi thông tin"
        android:layout_marginTop="16dp"/>

</LinearLayout>
